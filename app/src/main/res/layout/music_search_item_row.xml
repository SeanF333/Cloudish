<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="6dp"
    android:focusable="true"
    android:id="@+id/search_song_item"
    android:background="@color/white">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/music_placeholder"
        android:id="@+id/dummusicpics"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_toEndOf="@+id/dummusicpics"
        android:layout_toRightOf="@id/dummusicpics"
        android:paddingRight="60dp"
        android:paddingEnd="60dp"
        android:id="@+id/sTitle"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:id="@+id/sDuration"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sTitle"
        android:layout_toEndOf="@id/dummusicpics"
        android:layout_toRightOf="@id/dummusicpics"
        android:text="Artist"
        android:id="@+id/sArtist"
        android:layout_marginTop="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sArtist"
        android:layout_toEndOf="@id/dummusicpics"
        android:layout_toRightOf="@id/dummusicpics"
        android:text="Album"
        android:id="@+id/sAlbum"
        android:layout_marginTop="3dp"/>










</RelativeLayout>