<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="6dp"
    android:focusable="true"
    android:background="@color/oren">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/music_placeholder"
        android:id="@+id/dummyimagemusic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_toEndOf="@+id/dummyimagemusic"
        android:layout_toRightOf="@id/dummyimagemusic"
        android:paddingRight="50dp"
        android:paddingEnd="50dp"
        android:id="@+id/mTitle"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:id="@+id/mDuration"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_play_circle_outline_white"
        android:layout_below="@id/mDuration"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:id="@+id/musicstatus"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTitle"
        android:layout_toEndOf="@id/dummyimagemusic"
        android:layout_toRightOf="@id/dummyimagemusic"
        android:text="Artist"
        android:id="@+id/mArtist"
        android:layout_marginTop="3dp"/>






</RelativeLayout>