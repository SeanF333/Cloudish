<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".UploadAlbumActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarUA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/closeUA"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_close"
                    app:tint="@color/pop_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/closeUA"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Create New Album"
                    android:textAllCaps="false"
                    android:textColor="@color/main_purple"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/doneeUA"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_done"
                    app:tint="@color/pop_orange" />

            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/albumpp"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="0dp"
            android:elevation="5dp" />

        <Button
            android:id="@+id/selectC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:backgroundTint="@color/pop_orange"
            android:fontFamily="@font/poppins_medium"
            android:padding="10dp"
            android:text="Select Cover"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:text="Album Name"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/unnnnUA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/grey_out"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:text="Category"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/spin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:popupBackground="@color/white">

        </Spinner>


    </LinearLayout>


</LinearLayout>