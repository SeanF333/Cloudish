<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="6dp"
    android:focusable="true"
    android:id="@+id/layout_following_card"
    android:background="@color/white">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/music_placeholder"
        android:id="@+id/userpics"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_toEndOf="@+id/userpics"
        android:layout_toRightOf="@id/userpics"
        android:paddingRight="50dp"
        android:paddingEnd="50dp"
        android:id="@+id/usernameS"
        android:textStyle="bold"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameS"
        android:layout_toEndOf="@id/userpics"
        android:layout_toRightOf="@id/userpics"
        android:text="Fullname"
        android:id="@+id/fullnameS"
        android:layout_marginTop="3dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Unfollow"
        android:id="@+id/btnUnfol"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Follow"
        android:id="@+id/btnFollow"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_centerVertical="true"/>









</RelativeLayout>