<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon5"
    tools:context=".OTPActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="180dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            >

            <EditText
                android:id="@+id/otpET1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:background="@drawable/otpinput"
                android:layout_marginEnd="3dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/otpET2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:background="@drawable/otpinput"
                android:layout_marginEnd="3dp"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/otpET3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:background="@drawable/otpinput"
                android:layout_marginEnd="3dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/otpET4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:background="@drawable/otpinput"
                android:layout_marginEnd="3dp"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/otpET5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:background="@drawable/otpinput"
                android:layout_marginEnd="3dp"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/otpET6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:gravity="center"
                android:maxLength="1"
                android:background="@drawable/otpinput"
                android:textSize="20sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#307A02"
            android:text="Send"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="90dp">

        <ProgressBar
            android:id="@+id/PD"
            android:visibility="visible"
            android:layout_width="50dp"
            android:layout_height="50dp"



            />
    </LinearLayout>



</RelativeLayout>